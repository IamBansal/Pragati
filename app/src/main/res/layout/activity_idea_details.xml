<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.upload.IdeaDetails">

    <ImageView
        android:id="@+id/bubbleTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bubble_top" />

    <ImageView
        android:id="@+id/bubbleTopRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="80dp"
        android:elevation="32dp"
        android:src="@drawable/bubble_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-40sp"
        android:src="@drawable/curve_top_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30sp"
        android:layout_marginEnd="-20sp"
        android:src="@drawable/curve_top_right" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-35dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_wave" />

    <ImageView
        android:id="@+id/bubbleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-22dp"
        android:src="@drawable/bubble_bottom_right" />

    <ImageView
        android:id="@+id/bubbleBottomLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/bubble_bottom" />

    <TextView
        android:id="@+id/tvCreateIdea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="60sp"
        android:drawableRight="@drawable/ic_drop_up"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:letterSpacing="0.07"
        android:text="Idea Details"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/uploadPitchVideoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCreateIdea"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="Please fill this form to continue"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnContinueIdea"
        android:layout_below="@id/uploadPitchVideoView"
        android:layout_marginVertical="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:text="Describe in detail what your business or product is. What does it do? Provide as much detail as possible."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDescribeFirstIdea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etDescribeFirstIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="Where do you live?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etLiveSecondIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="Have you ever raised funding from outside? if yes, please provide all the details (when, how much and at what valuation).\nAnd how much have you raised in total ?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etRaiseThirdIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="How much money have you invested in the company and in what time frame? What was that money used for?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etMoneyFourIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="What investment amount are you seeking, and what percentage of equity are you willing to give in exchange?\n(“I'm seeking $_______ and I'm willing to give up ______%”)"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etAmountFiveIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="What do you intend to do with the investment funds? Where will the money go?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etIntendSixIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="Please enlist all the founding members name with the equity distribution among them and founder title (e.g. CEO) ."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etEnlistSevenIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="How long have each of you been working on this? "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etLongEightIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="Why did you pick this idea to work on? Do you have domain expertise in this area? How do you know people need what you're making?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etPickNineIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginTop="15dp"
                android:text="How do or will you make money?"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="15dp"
                app:cardElevation="20sp">

                <EditText
                    android:id="@+id/etHowMoneyTenIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="15"
                    android:fontFamily="@font/poppins"
                    android:hint="Type Here"
                    android:nestedScrollingEnabled="true"
                    android:paddingHorizontal="10sp"
                    android:paddingVertical="8sp"
                    android:textColor="@color/grey"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueIdea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageView"
        android:layout_marginHorizontal="30sp"
        android:layout_marginBottom="-17dp"
        android:background="@drawable/custom_button_2"
        android:elevation="20sp"
        android:fontFamily="@font/poppins"
        android:letterSpacing="0.13"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:padding="8sp"
        android:shadowColor="@color/black"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp" />

</RelativeLayout>