<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signUp.Invest">

    <ImageView
        android:id="@+id/ivBackInvest"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvInvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginTop="75sp"
        android:fontFamily="@font/poppins"
        android:gravity="end"
        android:letterSpacing="0.13"
        android:text="What\nbrings\nyou\nhere?\ndfhsb\nrttbtr"
        android:textColor="@color/primary"
        android:textSize="26sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="20sp"
        android:layout_toEndOf="@id/tvInvest"
        android:src="@drawable/ic_undraw_investment" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAngelInvestor"
        android:layout_width="150sp"
        android:layout_height="160sp"
        android:layout_below="@id/tvInvest"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37sp"
        android:layout_marginTop="40sp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="10sp"
        app:cardElevation="9sp">

        <LinearLayout
            android:id="@+id/llAngel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="200sp">

                <ImageView
                    android:id="@+id/ivAngel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="2sp"
                    android:src="@drawable/ic_investor" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvAngel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Angel Investor"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCapitalist"
        android:layout_width="150sp"
        android:layout_height="160sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvInvest"
        android:layout_marginEnd="37sp"
        android:layout_marginTop="40sp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="10sp"
        app:cardElevation="9sp">

        <LinearLayout
            android:id="@+id/llCapitalist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="200sp">

                <ImageView
                    android:id="@+id/ivCapitalist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="3sp"
                    android:src="@drawable/ic_investor_black" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvCapitalist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="20sp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Venture Capitalist"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_below="@id/cardAngelInvestor"
        android:layout_marginStart="32sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/ic_undraw_in_progress" />

    <Button
        android:id="@+id/btnGetStartedInvest"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginBottom="90sp"
        android:alpha="0.5"
        android:background="@drawable/custom_button"
        android:enabled="false"
        android:fontFamily="@font/poppins"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:padding="8sp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textSize="17sp" />

</RelativeLayout>