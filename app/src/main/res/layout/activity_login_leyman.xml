<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginLayman">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="50sp"
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        app:cardCornerRadius="200sp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="20sp"
        android:layout_width="100sp"
        android:layout_height="100sp" >

        <ImageView
            android:layout_gravity="center"
            android:layout_marginStart="3sp"
            android:src="@drawable/ic_phone_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="OTP Verification"
        android:textColor="@color/primary" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="20sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="We will send you a One Time Password on your phone number"
        android:textColor="@color/grey" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmailLogin"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="40sp"
        android:layout_marginBottom="30sp"
        android:layout_gravity="center"
        app:cardCornerRadius="15sp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_marginEnd="10sp"
                android:layout_marginStart="10sp"
                android:layout_gravity="center"
                android:src="@drawable/ic_iphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etNumberLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:fontFamily="@font/poppins"
                android:hint="+91 XXX XXX XXXX"
                android:background="@null"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="12sp"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnGetOTP"
        android:text="Get OTP"
        android:textAllCaps="false"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_marginEnd="40sp"
        android:layout_gravity="end"
        android:background="@drawable/custom_button"
        android:textSize="17sp"
        android:fontFamily="@font/poppins"
        android:padding="8sp"
        android:layout_width="150sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="70sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="or continue with"
        android:textColor="@color/grey" />

    <LinearLayout
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="120sp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLoginWithGoogle"
            android:layout_gravity="center"
            app:cardCornerRadius="200sp"
            android:layout_weight="1"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="10sp"
            android:layout_marginVertical="10sp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="20sp"
            android:layout_width="50sp"
            android:layout_height="50sp" >

            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="3sp"
                android:src="@drawable/ic_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLoginWithLinkedIn"
            android:layout_gravity="center"
            app:cardCornerRadius="200sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="10sp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="20sp"
            android:layout_width="50sp"
            android:layout_height="50sp" >

            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="2sp"
                android:src="@drawable/ic_linkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardLoginWithSocial"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:cardCornerRadius="200sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="30sp"
            android:layout_marginVertical="10sp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="20sp"
            android:layout_width="50sp"
            android:layout_height="50sp" >

            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="3sp"
                android:src="@drawable/ic_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>