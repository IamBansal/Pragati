<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FellowCredentials">

    <ImageView
        android:id="@+id/ivBackFellow"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="20sp"
        android:layout_gravity="center"
        app:cardCornerRadius="200sp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        app:cardElevation="10sp"
        android:layout_width="100sp"
        android:layout_height="100sp" >

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="30sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="@string/ReachOutFellows"
        android:textColor="@color/grey" />

    <TextView
        android:id="@+id/tvContactViaMailFellow"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:letterSpacing="0.13"
        android:layout_marginTop="5sp"
        android:layout_marginHorizontal="20sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppins"
        android:text="pragati@gmail.com"
        android:textColor="@color/primary" />

    <Button
        android:id="@+id/btnProceedToLoginFellow"
        android:layout_marginTop="20sp"
        android:elevation="20sp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:fontFamily="@font/poppins"
        android:layout_marginHorizontal="40sp"
        android:textSize="20sp"
        android:text="Proceed to Login"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins"
        android:text="@string/also_connect_with_us_on"
        android:textColor="@color/grey" />

    <LinearLayout
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_marginTop="-8sp"
        android:layout_width="wrap_content"
        android:layout_height="120sp" >

        <ImageButton
            android:id="@+id/ibContactViaInstagramFellow"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:layout_marginVertical="10sp"
            android:layout_marginStart="30sp"
            android:foregroundGravity="center_horizontal"
            android:layout_marginEnd="-10sp"
            android:layout_weight="1"
            android:elevation="20sp"
            android:background="@drawable/ic_instagram"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black" />

        <ImageButton
            android:id="@+id/ibContactViaLinkedInFellow"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:foregroundGravity="center_horizontal"
            android:layout_marginVertical="10sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="10sp"
            android:layout_weight="1"
            android:elevation="9sp"
            android:paddingStart="3sp"
            android:background="@drawable/round_button_bg"
            android:backgroundTint="#0288D1"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:src="@drawable/ic_linkedin" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardContactViaSocialFellow"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:cardCornerRadius="200sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="30sp"
            android:layout_marginVertical="10sp"
            android:outlineSpotShadowColor="@color/black"
            android:outlineAmbientShadowColor="@color/black"
            app:cardElevation="9sp"
            android:layout_width="50sp"
            android:layout_height="50sp" >

            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="3sp"
                android:src="@drawable/ic_twitter"
                android:layout_width="60sp"
                android:layout_height="60sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>